{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "prettier"
    ],
    "plugins": [
        "prettier"
      ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true }],
        "quotes": [2, "single", "avoid-escape"]
    }
}